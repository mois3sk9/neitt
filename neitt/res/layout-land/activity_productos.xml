<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <!-- Fragmento conrrespondiente a la barra lateral para listar productos -->
    <fragment 
        android:name="fragments.FragmentProductos"
        android:id="@+id/frg_dtl_pro"
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    <!-- Fragmento conrrespondiente al detalle del producto -->
    <fragment 
        android:name="fragments.FragmentDetalleProductos"
        android:id="@+id/frag_dtl_productos"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    

</LinearLayout>
